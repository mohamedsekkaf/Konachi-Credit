<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".Calcule_Activity">


    <TextView
        android:id="@+id/working_space"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/result"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_save"
        android:layout_marginBottom="48dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/btn_table_layout"
        android:layout_marginBottom="28dp"
        android:background="@drawable/btn_save1"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_table_layout"
        tools:layout_editor_absoluteX="0dp" />

    <TableLayout
        android:id="@+id/btn_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7EF4F4F4"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_c"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_3"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_4"
                android:gravity="center"
                android:onClick="backSpaceAction"
                android:text="âŒ«"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/buttonOperator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_4"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_divide"
                style="@style/buttonOperator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="44dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_9"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_8"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_7"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiple"
                style="@style/buttonOperator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="44dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"

            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_6"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_5"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_4"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sum"
                style="@style/buttonOperator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="44dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_3"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_2"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_1"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_minus"
                style="@style/buttonOperator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="44dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"

            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_3"
                android:gravity="center"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_0"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_point"
                style="@style/buttonNumber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_1"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="44dp" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/btn_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:onClick="equalsAction"
                android:text="="
                android:textColor="@color/white"
                android:textSize="44dp" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>