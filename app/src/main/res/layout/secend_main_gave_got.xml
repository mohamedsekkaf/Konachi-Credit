<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dp">
        <View
            android:id="@+id/topgot"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_baseline_keyboard_double_arrow_down_24"
            />
        <View
            android:id="@+id/downgave"
            android:text="top"
            android:layout_width="32dp"
            android:layout_height="33dp"

            android:background="@drawable/ic_baseline_keyboard_double_arrow_up_24"
            />
        <TextView
            android:id="@+id/typegave"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:text="Type"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/typegot"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="2dp"
            android:text="Type"
            android:textColor="@color/verre"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="29dp"

            android:layout_marginLeft="10dp"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amountgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Amount"
            android:textColor="@color/verre"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amountgave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Amount"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="DH"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>